# editorconfig.org

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.js]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 4 space indentation
[*.toml]
indent_style = space
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.{json,tpl}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2
